{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://legumefederation.org/schemas/cmap.json",
  "title" : "cmap-js schema",
  "description" : "For more info, see https://github.com/ncgr/cmap-js",
  "type" : "object",
  "properties" : {
    "#" : { "type" : "string"},
    "header" : { "type" : "string"},
    "attribution" : { "type" : "string" },
    "initialView" : {
      "type" : "array",
      "items" : {
        "type": "object",
        "properties" : {
          "source" : { "type" : "string" },
          "map" : { "type" : "string" }
        },
        "required" : ["source", "map"]
      }
    },
    "sources" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "#" : { "type": "string" },
          "id" : { "type" : "string" },
          "method" : { "type" : "string"},
          "data" : { "type" : "object" },
          "url" : { "type" : "string" }
        },
        "required" : ["url", "method", "id"]
      }
    }
  },
  "required": ["header", "attribution", "sources"]
}
