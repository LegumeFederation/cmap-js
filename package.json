{
  "name": "cmap-js",
  "version": "0.0.1",
  "description": "Display and compare biological maps (genetic, physical, cytogenetic, genomic, linkage groups, chromosomes, scaffolds).",
  "main": "build/cmap.min.js",
  "module": "build/cmap.mjs",
  "browserslist": [
    "ie 10"
  ],
  "scripts": {
    "lint": "eslint src test",
    "build": "rollup --config",
    "pretest": "npm run build",
    "test": "mocha",
    "coverage": "nyc npm test",
    "watch": "rollup -c -w --environment WATCH:yes",
    "validate-config": "ajv -s cmap-schema.json -d cmap.json",
    "_postinstall": "for f in data/*.gz; do gzip -dc $f > `echo $f | sed s/\\.gz//`; done",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ncgr/cmap-js.git"
  },
  "author": "Andrew Wilkey <awilkey@iastate.edu>, Alex G Rice <agr@ncgr.org>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/LegumeFederation/cmap-js/issues"
  },
  "homepage": "https://github.com/LegumeFederation/cmap-js#readme",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-react-jsx": "^7.12.17",
    "@babel/preset-env": "^7.13.10",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-polyfill": "*",
    "cssnano": "*",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-preact": "*",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "livereload": "^0.9.2",
    "mdn-polyfills": "^5.20.0",
    "npm-run-all": "*",
    "nyc": "^15.1.0",
    "postcss": "^8.2.8",
    "postcss-cssnext": "*",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "postcss-simple-vars": "^6.0.3",
    "promise-polyfill": "^8.2.0",
    "query-string": "^6.14.1",
    "rollup": "^2.44.0",
    "rollup-plugin-dev": "^2.0.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-node-builtins": "*",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-serve": "*",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "core-js": "*",
    "ecma-proposal-math-extensions": "*",
    "hammerjs": "*",
    "hamsterjs": "*",
    "mobx": "^6.1.8",
    "mobx-react": "^7.1.0",
    "normalize.css": "*",
    "papaparse": "^5.3.0",
    "preact": "^10.5.13",
    "preact-router": "^3.2.1",
    "purecss": "^2.0.5",
    "rbush": "^3.0.1",
    "rbush-knn": "^3.0.1",
    "react-hammerjs": "^1.0.1",
    "unfetch": "^4.2.0"
  },
  "nyc": {
    "exclude": [
      "src/main.js",
      "src/CMAP.js",
      "src/developmentTooling.js",
      "build"
    ]
  }
}
